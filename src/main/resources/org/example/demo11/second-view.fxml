<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="220.0" prefWidth="500.0" spacing="25.0" styleClass="dialog-root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo11.SecondController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <VBox spacing="10.0">
         <Label text="ПІП:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d4059;" />
         <TextField fx:id="txtPip" prefHeight="40.0" prefWidth="440.0" promptText="Введіть ПІП..." styleClass="dialog-text-field" />
      </VBox>
      <VBox spacing="10.0">
         <Label text="Телефон:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d4059;" />
         <TextField fx:id="txtPhone" prefHeight="40.0" prefWidth="440.0" promptText="Введіть телефон..." styleClass="dialog-text-field" />
      </VBox>
      <HBox spacing="15.0" alignment="CENTER_RIGHT" prefWidth="440.0">
         <Button onAction="#actionClose" mnemonicParsing="false" prefHeight="45.0" prefWidth="120.0" text="Відміна" styleClass="cancel-button" />
         <Button onAction="#actionSave" mnemonicParsing="false" prefHeight="45.0" prefWidth="120.0" text="Зберегти" styleClass="save-button" />
      </HBox>
   </children>
</VBox>

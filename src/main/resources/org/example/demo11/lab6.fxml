<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo11.Lab6Controller">
   <children>
      <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#newFile" text="New" />
                  <Menu mnemonicParsing="false" text="New from Template">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#newFromTemplate" text="AlertDialog" />
                        <MenuItem mnemonicParsing="false" onAction="#newFromTemplate" text="Basic Application" />
                     </items>
                  </Menu>
                  <CheckMenuItem fx:id="showDetailsMenuItem" mnemonicParsing="false" onAction="#toggleShowDetails" selected="true" text="Show Details" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitButton" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem mnemonicParsing="false" text="Undo" />
                  <MenuItem mnemonicParsing="false" text="Redo" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Cut" />
                  <MenuItem mnemonicParsing="false" text="Copy" />
                  <MenuItem mnemonicParsing="false" text="Paste" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Insert">
               <items>
                  <MenuItem mnemonicParsing="false" text="Component" />
                  <MenuItem mnemonicParsing="false" text="Layout" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Modify">
               <items>
                  <MenuItem mnemonicParsing="false" text="Properties" />
                  <MenuItem mnemonicParsing="false" text="Layout" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Arrange">
               <items>
                  <MenuItem mnemonicParsing="false" text="Bring to Front" />
                  <MenuItem mnemonicParsing="false" text="Send to Back" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Preview">
               <items>
                  <MenuItem mnemonicParsing="false" text="Show Preview" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Window">
               <items>
                  <MenuItem mnemonicParsing="false" text="Preferences" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <HBox spacing="30.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="60.0">
         <children>
            <VBox spacing="20.0" prefWidth="320.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="CheckBox" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 18px;" />
                  <Label text="Властивості людино - машинного інтерфейсу:" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
                  <CheckBox fx:id="ChBPogod" text="Погодженість" />
                  <CheckBox fx:id="ChBGnuch" text="Гнучкість" />
                  <CheckBox fx:id="ChBDruz" text="Дружність" />
                  <CheckBox fx:id="ChBSklad" text="Складність" />
                  <Button mnemonicParsing="false" onAction="#checkBoxAnswer" prefHeight="40.0" prefWidth="140.0" text="Відповісти" />
                  <Label fx:id="lblTrueAnswer" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
               </children>
            </VBox>
            <VBox spacing="20.0" prefWidth="320.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="ChoiceBox" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 18px;" />
                  <Label text="Файл sample.fxml відповідає за логіку програми." wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
                  <ChoiceBox fx:id="choiceB" prefHeight="35.0" prefWidth="250.0" />
                  <Button mnemonicParsing="false" onAction="#choiceBoxAnswer" prefHeight="40.0" prefWidth="140.0" text="Відповісти" />
                  <Label fx:id="lblAnwerChoice" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
               </children>
            </VBox>
            <VBox spacing="20.0" prefWidth="320.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="ComboBox" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 18px;" />
                  <Label text="Дана панель надає п'ять частин, в яких можуть розміщуватись компоненти: верхня, нижня, ліва, права та центральна." wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
                  <ComboBox fx:id="comboBox" prefHeight="35.0" prefWidth="250.0" />
                  <Label fx:id="lblAnwerCombo" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
               </children>
            </VBox>
            <VBox spacing="20.0" prefWidth="320.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label text="RadioButton" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 18px;" />
                  <Label text="У якому меню середовища Scene Builder можна змінити загальні налаштування компоненти (Текст, розмір, Шрифт)?" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
                  <RadioButton fx:id="radioProp" text="Properties" />
                  <RadioButton fx:id="radioLay" text="Layout" />
                  <RadioButton fx:id="radioCode" text="Code" />
                  <RadioButton fx:id="radioHier" text="Hierarchy" />
                  <Label fx:id="lblRadio" wrapText="true" prefWidth="290.0" maxHeight="Infinity" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Label fx:id="progressLabel" text="Результат: 0/4" 
             style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d4059;"
             AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="40.0" />
   </children>
</AnchorPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<HBox spacing="10" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo11.DatePicker">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <DatePicker fx:id="datePicker" />
    <Button text="Показати дату" onAction="#getDate" />
    <Label fx:id="dateLabel" text="dd.MM.yyyy" />
</HBox>


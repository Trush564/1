<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo11.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox spacing="15.0" alignment="CENTER" prefWidth="560.0">
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="45.0" prefWidth="160.0" text="Додати" />
        <Button fx:id="editButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="45.0" prefWidth="160.0" text="Редагувати" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="45.0" prefWidth="160.0" text="Видалити" />
    </HBox>
   <HBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="560.0">
      <TextField fx:id="txtSearch" prefHeight="40.0" HBox.hgrow="ALWAYS" style="-fx-font-size: 14px; -fx-background-radius: 8; -fx-border-radius: 8;" promptText="Пошук за ПІП або телефоном..." />
      <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#searchPerson" prefHeight="40.0" prefWidth="120.0" text="Пошук" />
   </HBox>
   <AnchorPane prefHeight="300.0" prefWidth="600.0">
      <children>
         <TableView fx:id="tableAddressBook" layoutX="14.0" layoutY="8.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <columns>
             <TableColumn fx:id="columnPIP" prefWidth="75.0" text="ПІП" />
             <TableColumn fx:id="columnPhone" prefWidth="75.0" text="Телефон" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </children>
   </AnchorPane>
   <HBox spacing="15.0" alignment="CENTER_LEFT" prefWidth="600.0">
      <Label fx:id="labelCount" text="Кількість записів:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d4059;" />
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="btnOther" mnemonicParsing="false" onAction="#openOtherLabs" prefHeight="50.0" prefWidth="200.0" text="Інші лабораторні" styleClass="other-labs-button" />
   </HBox>
</VBox>

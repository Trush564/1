<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo11.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="66.0" prefWidth="560.0">
        <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="40.0" prefWidth="140.0" text="Добавити">
                <HBox.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="40.0" prefWidth="140.0" text="Редагувати">
                <HBox.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#openWindow" prefHeight="40.0" prefWidth="140.0" text="Видалити">
                <HBox.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>

    <Label fx:id="welcomeText" />
   <AnchorPane prefHeight="98.0" prefWidth="560.0">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <children>
         <TextField fx:id="txtSearch" layoutY="9.0" prefHeight="40.0" prefWidth="310.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="230.39999999999998" />
         <Button fx:id="btnSearch" layoutX="420.0" layoutY="9.0" mnemonicParsing="false" onAction="#searchPerson" prefHeight="40.0" prefWidth="140.0" text="Пошук" AnchorPane.rightAnchor="0.0" />
      </children>
   </AnchorPane>
   <AnchorPane prefHeight="300.0" prefWidth="600.0">
      <children>
         <TableView fx:id="tableAddressBook" layoutX="14.0" layoutY="8.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <columns>
             <TableColumn fx:id="columnPIP" prefWidth="75.0" text="ПІП" />
             <TableColumn fx:id="columnPhone" prefWidth="75.0" text="Телефон" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </children>
   </AnchorPane>
   <AnchorPane prefHeight="100.0" prefWidth="600.0">
      <children>
         <Label fx:id="labelCount" layoutX="40.0" layoutY="21.0" text="Кількість записів:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
         <Button fx:id="btnOther" layoutX="217.0" layoutY="1.0" mnemonicParsing="false" onAction="#openOtherLabs" prefHeight="26.0" prefWidth="126.0" text="Other lab" AnchorPane.leftAnchor="217.0">
            <padding>
               <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
         </Button>
         <Button layoutX="514.0" layoutY="29.0" mnemonicParsing="false" text="Вихід" />
      </children>
   </AnchorPane>
</VBox>
